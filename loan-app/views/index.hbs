<!-- Always shows a header, even in smaller screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    {{>header}}
    <main class="mdl-layout__content">
        <div class="page-content">
            <div class="top-ribbon" style="background-color: rgb(63,81,181);
            width: 100%; height: 200px; position: absolute">
                </div>
            <div style="position: absolute; width: 100%;">
                <div class="top-header-banner"style="background-color: rgb(1,151,251);
                width: calc(100% - 32px); height: 120px; margin: 16px; border-radius: 5px;
                box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12);">
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--6-col  mdl-cell--2-col-phone"
                             style="text-align: center;">
                            <p style="color: #fff">Active Loan</p>
                            <p style="color: #fff; font-size: 28px;">{{data.loan_amount}}</p>
                        </div>
                        <div class="mdl-cell mdl-cell--6-col  mdl-cell--2-col-phone"
                             style="text-align: center;  border-left: 1px solid #fff;">
                            <p style="color: #fff">Credit Status</p>
                            <p style="color: #fff; font-size: 28px;">{{data.credit_score}}</p>
                        </div>
                    </div>
                </div>
                <div class="mdl-layout__tab-bar mdl-js-ripple-effect" style="height: auto; padding-left:16px; bottom: 0; left: 0">
                    <a href="#scroll-tab-1" class="mdl-layout__tab is-active">Loan History</a>
                </div>
            </div>
            <div class="" style="position: relative; padding-top: 200px;">
                {{#if data.history}}
                    {{#each data.history}}
                    <div class="" style="width: 100%; padding: 16px">
                        <div class="mdl-shadow--2dp" style="width: calc(100% - 32px); border-radius: 5px">
                            <div class="mdl-grid" style="position: relative">
                                <div class="mdl-cell mdl-cell--1-col-phone">
                                    <div class="numberCircle">{{this.date}}</div>
                                </div>
                                <div class="mdl-cell mdl-cell--2-col-phone">
                                    <p><span style="color: #000">Amount Borrowed</span> <br>Ksh.<span style="font-size: 17px; color: limegreen">{{this.loan_amount}}.00</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                {{else}}
                    <div>
                        <h2>No Data Found</h2>
                    </div>
                {{/if}}
            </div>
        </div>
    </main>
</div>
